<?xml version="1.0" encoding="utf-8"?>

<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <layer-list>
            <item android:left="1.5dp" android:top="1.5dp">
                <shape>
                    <solid android:color="#ffffff" />
                    <corners android:radius="2dp"/>
                </shape>
            </item>
        </layer-list>
    </item>
    <item>
        <layer-list>
            <!-- SHADOW LAYER -->
            <item android:left="1.5dp" android:top="1.5dp">
                <shape>
                    <solid android:color="#eeeeee" />
                    <corners android:radius="2dp"/>
                </shape>
            </item>
            <!-- CONTENT LAYER -->
            <item android:bottom="1.5dp" android:right="1.5dp">
                <shape>
                    <solid android:color="#ffffff" />
                    <corners android:radius="2dp"/>
                </shape>
            </item>
        </layer-list>
    </item>
</selector>

